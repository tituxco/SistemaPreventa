<mauiPopup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mauiPopup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="SistemaPreventa.ProductoPedidoPop"
                         Title="Detalle item pedido">
    <VerticalStackLayout Padding="10" Margin="10">
        <Label 
            Text="Detalle item pedido"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="18"
            FontAttributes="Bold"
            BackgroundColor="Blue"
            TextColor="White"/>
        
        <Label Text="Cantidad:"></Label>
        <Entry x:Name="txtCantidad" Text="1"/>

        <Label Text="Precio: "/>
        <Entry x:Name="txtPrecio"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Cancelar" Text="Cancelar" Clicked="Cancelar_Clicked" Grid.Column="0" Padding="10" Margin="10"></Button>
            <Button x:Name="Aceptar" Text="Aceptar" Clicked="Aceptar_Clicked" Grid.Column="1" Padding="10" Margin="10"></Button>
        </Grid>

        
    </VerticalStackLayout>
</mauiPopup:BasePopupPage>