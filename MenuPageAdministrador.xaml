<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaPreventa.MenuPageAdministrador"
             Title="MenuPageAdministrador">
    <StackLayout>
        <Button Text="Inicio" x:Name="btnInicio" Clicked="btnInicio_Clicked" Padding="10" Margin="10"/>
        <Button Text="Clientes" x:Name="btnClientes" Clicked="btnClientes_Clicked" Padding="10" Margin="10"/>
        <Button Text="Facturacion" x:Name="btnFacturacion"  Clicked="btnFacturacion_Clicked" Padding="10" Margin="10"/>
        <Button Text="Productos" x:Name="btnProductos" Clicked="btnProductos_Clicked" Padding="10" Margin="10"/>
        <Button Text="Administracion" x:Name="btnAdministracion" Clicked="btnAdministracion_Clicked" Padding="10" Margin="10"/>
        <BoxView Color="Black"  HeightRequest="1" HorizontalOptions="FillAndExpand" />
        <Label x:Name="lblDatosMenuPage" FontSize="12" FontAttributes="Bold"/>
    </StackLayout>
</ContentPage>