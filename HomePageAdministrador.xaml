<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaPreventa.HomePageAdministrador"
             Title="Inicio Administradores">
    <StackLayout Padding="20">
        <Image x:Name="imgLogo" Aspect="AspectFit" HeightRequest="200" HorizontalOptions="CenterAndExpand" />
        <Label x:Name="lblNombreFantasia" FontSize="18" HorizontalOptions="CenterAndExpand" />
        <Label x:Name="lblRazonSocial" FontSize="18" HorizontalOptions="CenterAndExpand" />
        <Label x:Name="lblDireccion" FontSize="18" HorizontalOptions="CenterAndExpand" />
        <Label x:Name="lblLocalidad" FontSize="18" HorizontalOptions="CenterAndExpand" />
        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,10,0,10" />
    </StackLayout>
</ContentPage>